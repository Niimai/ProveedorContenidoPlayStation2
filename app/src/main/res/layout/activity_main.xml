<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.skywalker.proveedorcontenidoplaystation2.MainActivity">

    <Button
        android:id="@+id/buttonIrALosJuegos"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonGaleria"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Listado de Juegos" />

    <Button
        android:id="@+id/buttonCamara"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/buttonIrALosJuegos"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/buttonIrALosJuegos"
        android:text="Sacar Foto" />

    <Button
        android:id="@+id/buttonGaleria"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_below="@+id/buttonCamara"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerHorizontal="true"
        android:text="Elegir Foto de la Galeria" />

    <Button
        android:id="@+id/buttonNavigationDrawer"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/buttonGaleria"
        android:layout_below="@+id/buttonGaleria"
        android:text="Utilidades"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/image_view_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonGaleria"
        android:layout_marginTop="50dp"
        android:src="@drawable/ps2" />
</RelativeLayout>
